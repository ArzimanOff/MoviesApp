<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@drawable/movie_card_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/kp_rating_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:textSize="12sp"
                android:background="@drawable/rating_box_bg_high"
                app:drawableStartCompat="@drawable/kp_icon"
                android:drawablePadding="2dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/imdb_rating_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text=""
                android:textSize="12sp"
                android:background="@drawable/rating_box_bg_high"
                app:drawableStartCompat="@drawable/imdb_icon"
                android:drawablePadding="2dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/age_rating_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text=""
                android:textSize="12sp"
                android:background="@drawable/age_rating_box"
                android:drawablePadding="4dp"
                android:gravity="center"
                />
        </LinearLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewMoviePoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:layout_marginVertical="4dp"
            tools:src="@tools:sample/avatars"
            app:shapeAppearanceOverlay="@style/rounded_image_view"
            />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="1+1"
            android:textSize="24sp"
            android:textColor="#631394"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>